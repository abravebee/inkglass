{
  "name": "inkglass",
  "version": 2,
  "alias": ["inkglass.now.sh"],
  "builds": [
    {
      "src": "back-end/journalapi/index.js",
      "use": "@now/node-server"
    },
    { "src": "front-end/package.json", 
      "use": "@now/static-build",
      "config": { "distDir": "build" } 
    }
  ],
  "routes": [
    {
      "src": "/journalapi/(.*",
      "dest": "/back-end/journalapi/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/front-end/$1"
    }
  ],
  "github": {
    "enabled": true
  }
}
